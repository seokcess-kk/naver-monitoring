modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[nix]
channel = "stable-25_05"
packages = ["redis", "chromium", "glib", "nss", "nspr", "at-spi2-atk", "cups", "dbus", "libdrm", "expat", "xorg.libxcb", "xorg.libX11", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXext", "xorg.libXfixes", "xorg.libXrandr", "libxkbcommon", "pango", "cairo", "alsa-lib", "mesa", "gtk3", "libgbm"]

[agent]
expertMode = true
integrations = ["sendgrid:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Naver Monitor"

[[workflows.workflow]]
name = "Naver Monitor"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "redis-server --daemonize yes && cd SearchBrand && npm run dev"
waitForPort = 5000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["npm", "run", "deploy:start", "--prefix", "SearchBrand"]
build = ["npm", "run", "deploy:build", "--prefix", "SearchBrand"]

[userenv]

[userenv.production]
APP_BASE_URL = "https://searchbrand.kr"

[userenv.shared]
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD = "true"
PUPPETEER_SKIP_DOWNLOAD = "true"
