modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[nix]
channel = "stable-25_05"
packages = ["unzip", "glib", "nss", "nspr", "at-spi2-atk", "cups", "dbus", "libdrm", "expat", "xorg.libxcb", "xorg.libX11", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXext", "xorg.libXfixes", "xorg.libXrandr", "libxkbcommon", "pango", "cairo", "alsa-lib", "mesa", "gtk3", "libgbm"]

[agent]
expertMode = true
integrations = ["sendgrid:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Naver Monitor"

[[workflows.workflow]]
name = "Naver Monitor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Naver-Monitor && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd Naver-Monitor && npx drizzle-kit push --config ./drizzle.config.ts && NODE_ENV=production node dist/index.cjs"]
build = ["bash", "-c", "cd Naver-Monitor && npm install --include=dev && npm run build"]

[userenv]

[userenv.production]
APP_BASE_URL = "https://naver-monitor--inner1.replit.app"
